# SecureInfer Configuration
# Copy to .env for local development

# =============================================================================
# ENVIRONMENT
# =============================================================================
SECUREINFER_ENV=development

# =============================================================================
# SERVER
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=debug

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=./data/secureinfer.db

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# OLLAMA
# =============================================================================
OLLAMA_URL=http://localhost:11434
MODEL_NAME=phi3.5:3.8b-mini-instruct-q4_K_M

# Model integrity verification (optional)
# Generate with: sha256sum ~/.ollama/models/...
MODEL_EXPECTED_HASH=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Risk scoring thresholds (0-100)
RISK_THRESHOLD_WARN=50   # Add warning header
RISK_THRESHOLD_BLOCK=80  # Block request

# Rate limiting
RATE_LIMIT_RPM=60        # Requests per minute
RATE_LIMIT_BURST=10      # Burst allowance

# Extraction detection
EXTRACTION_WINDOW=1h
EXTRACTION_MAX_SIMILAR=20
EXTRACTION_SIMILARITY_THRESHOLD=0.85

# =============================================================================
# OBSERVABILITY
# =============================================================================
METRICS_ENABLED=true
